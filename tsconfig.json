{
  "compilerOptions": {
    "module": "ES6",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
